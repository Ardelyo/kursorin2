# KURSORIN Environment Configuration
# Copy this file to .env and modify as needed

# Logging
LOG_LEVEL=INFO
LOG_FILE=kursorin.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Camera settings
CAMERA_INDEX=0
CAMERA_WIDTH=1280
CAMERA_HEIGHT=720
CAMERA_FPS=30

# Performance
MAX_FPS=60
ENABLE_GPU=false
THREAD_COUNT=4

# Tracking defaults
DEFAULT_HEAD_SENSITIVITY_X=2.5
DEFAULT_HEAD_SENSITIVITY_Y=2.0
DEFAULT_EYE_SENSITIVITY=1.0
DEFAULT_HAND_SENSITIVITY=1.5
DEFAULT_SMOOTHING_FACTOR=0.7

# UI
THEME=dark
SHOW_OVERLAY=true
SHOW_PREVIEW=true

# Calibration
AUTO_CALIBRATION=false
CALIBRATION_POINTS=9

# Accessibility
HIGH_CONTRAST_MODE=false
LARGE_CURSOR=false
AUDIO_FEEDBACK=true

# Data storage
DATA_DIR=~/.kursorin
SAVE_CALIBRATION=true
